<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_page.event.translatable.class">FDevs\PageBundle\EventListener\TranslatableSubscriber</parameter>
        <parameter key="f_devs_page.twig.translator.class">FDevs\PageBundle\Twig\TranslatorExtension</parameter>
        <parameter key="f_devs_page.service.choice_text.class">FDevs\PageBundle\Service\ChoiceText</parameter>
        <parameter key="f_devs_page.publish_time_period.listener.class">FDevs\PageBundle\EventListener\PublishTimePeriod</parameter>
        <parameter key="f_devs_page.publishable.listener.class">FDevs\PageBundle\EventListener\Publishable</parameter>
    </parameters>

    <services>
        <service id="f_devs_page.twig.translator_extension" class="%f_devs_page.twig.translator.class%">
            <argument type="service" id="f_devs_page.service.choice_text"/>
            <tag name="twig.extension"/>
        </service>

        <service id="f_devs_page.service.choice_text" class="%f_devs_page.service.choice_text.class%">
            <call method="setContainer"><argument id="service_container" type="service"/></call>
        </service>

    </services>

</container>
