<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_page.event.translatable.class">FDevs\PageBundle\EventListener\TranslatableSubscriber</parameter>
        <parameter key="f_devs_page.twig.translator.class">FDevs\PageBundle\Twig\TranslatorExtension</parameter>
        <parameter key="f_devs_page.twig.open_graph.class">FDevs\PageBundle\Twig\OpenGraphExtension</parameter>
        <parameter key="f_devs_page.service.choice_text.class">FDevs\PageBundle\Service\ChoiceText</parameter>
        <parameter key="f_devs_page.service.page_manager.class">FDevs\PageBundle\Service\PageManager</parameter>
        <parameter key="f_devs_page.listener.mapping_autoloader.class">FDevs\PageBundle\EventListener\MappingAutoloader</parameter>
    </parameters>

    <services>
        <service id="f_devs_page.twig.translator_extension" class="%f_devs_page.twig.translator.class%">
            <argument type="service" id="f_devs_page.service.choice_text"/>
            <tag name="twig.extension"/>
        </service>

        <service id="f_devs_page.twig.open_graph_extension" class="%f_devs_page.twig.open_graph.class%">
            <call method="setPropertyNamespace"><argument>%f_devs_page.open_graph.property_namespace%</argument></call>
            <call method="setPropertyFields"><argument>%f_devs_page.open_graph.property_fields%</argument></call>
            <call method="setDefault"><argument>%f_devs_page.open_graph.default%</argument></call>
            <tag name="twig.extension"/>
        </service>

        <service id="f_devs_page.service.choice_text" class="%f_devs_page.service.choice_text.class%">
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

        <service id="f_devs_page.service.page_manager" class="%f_devs_page.service.page_manager.class%" abstract="true">
            <call method="setManager">
                <argument type="service" id="f_devs_page.model_manager"/>
            </call>
        </service>

    </services>

</container>
