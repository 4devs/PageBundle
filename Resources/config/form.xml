<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_page.form.type.page.class">FDevs\PageBundle\Form\Type\PageType</parameter>
        <parameter key="f_devs_page.form.type.meta.class">FDevs\PageBundle\Form\Type\MetaType</parameter>
        <parameter key="f_devs_page.form.type.locale_text.class">FDevs\PageBundle\Form\Type\LocaleTextType</parameter>
        <parameter key="f_devs_page.form.type.translatable.class">FDevs\PageBundle\Form\Type\TranslatableType</parameter>
    </parameters>

    <services>

        <service id="f_devs_page.form.type.page" class="%f_devs_page.form.type.page.class%">
          <tag name="form.type" alias="f_devs_page" />
        </service>

        <service id="f_devs_page.form.type.meta" class="%f_devs_page.form.type.meta.class%">
          <tag name="form.type" alias="f_devs_meta" />
        </service>

        <service id="f_devs_page.form.type.translatable" class="%f_devs_page.form.type.translatable.class%">
            <tag name="form.type" alias="translatable"/>
            <call method="setLocales"><argument>%allowed.locales%</argument></call>
        </service>

        <service id="f_devs_page.form.type.locale_text" class="%f_devs_page.form.type.locale_text.class%">
            <tag name="form.type" alias="locale_text"/>
            <argument>text</argument>
        </service>

        <service id="f_devs_page.form.type.locale_textarea" class="%f_devs_page.form.type.locale_text.class%">
            <tag name="form.type" alias="locale_textarea"/>
            <argument>textarea</argument>
            <argument>%allowed.locales%</argument>
        </service>

        <service id="f_devs_page.form.type.locale_ckeditor" class="%f_devs_page.form.type.locale_text.class%">
            <tag name="form.type" alias="locale_ckeditor"/>
            <argument>ckeditor</argument>
            <argument>%allowed.locales%</argument>
        </service>

    </services>
</container>
